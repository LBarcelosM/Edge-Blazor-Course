@using Edge.Bills.Shared.Helpers

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Contas</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/home" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Policy="@BillsPoliciesHelper.POLICIES.MANAGE_USER">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="user_list" Match="NavLinkMatch.All">
                        <span class="oi oi-person" aria-hidden="true"></span> Usuários
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Policy="@BillsPoliciesHelper.POLICIES.VIEW_BILLS">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="bill_list" Match="NavLinkMatch.All">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Contas
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <div class="nav-item px-3">
            <NavLink class="nav-link red-link" href="#" @onclick="Logoff">
                <span class="oi oi-account-logout red-link" aria-hidden="true"></span> Sair
            </NavLink>
        </div>
    </nav>
</div>