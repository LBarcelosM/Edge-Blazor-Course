@inherits BasePage
@page "/"
@page "/login"

<div class="login-container">
    <div class="login-panel">
        <img src="./img/login-face.gif" alt="Login" class="mb-3" />
        <div class="input-group mb-3">
            <span class="input-group-text" id="label_email">@@</span>
            <input type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="label_email" @bind-value="_loginModel.Email" />
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="label_senha"><span class="oi oi-key"></span></span>
            <input type="password" class="form-control" placeholder="Senha" aria-label="Senha" aria-describedby="label_senha" @bind-value="_loginModel.Password" />
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-success" @onclick="Logar">Logar</button>
        </div>
    </div>
</div>